{
  "openapi": "3.0.0",
  "info": {
    "title": "Store API",
    "version": "1.0.0",
    "description": "API RESTful para gestão de e-commerce, desenvolvida com Node.js, Express e Sequelize. Permite gerenciar produtos, categorias, usuários, carrinhos, pedidos e pagamentos de forma escalável e modular.",
    "contact": {
      "name": "Lucas Alves",
      "email": "lucas1901alves@gmail.com"
    },
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Test API Server"
    }
  ],
  "paths": {
    "/sessions": {
      "post": {
        "summary": "User Login",
        "description": "Rota responsável por autenticar e realizar o login dos usuários no sistema.",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "example@email.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Senha errada"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não existente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Usuário não existente"
                    }
                  }
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccefullLogin"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "SuccefullLogin": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "token": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
